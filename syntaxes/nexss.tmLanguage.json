{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "Nexss",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#keywords"
    },

    {
      "include": "#strings"
    },
    {
      "include": "#patterns"
    },
    {
      "include": "#constants"
    },
    {
      "include": "#specialCommand"
    }
  ],
  "repository": {
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.nexss",
          "match": "\\b(App|Blender|Clipboard|Convert|Data|Debug|Email|FS|Id|Input|Install|Keyboard|Mouse|Nexss|Output|Printer|Screen|Select|Storage|System|Template|Web)\\b"
        },
        {
          "name": "keyword.other.nexss",
          "match": "\\b(nxsAs|nxsTest|nxsDelete|nxsDefault|nxsInFrom|replaceFrom|replaceTo|nxsRenameFrom)\\b"
        },
        {
          "name": "keyword.control.nexss",
          "match": "\\b(Run|VideoToGif|Concat|Delete|Pretty|Rename|Replace|Select|Show|Dir|Find|Temp|Unlock|Unpack|OCR|Install|Keyboard|Move|MoveToImage|PackageBrowser|Text|AreaOCR|AreaVideo|Capture|VideoRecord|Area|Info|Output|Click|Get|EnsurePath|ToTxt|Find|Replace)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.nexss",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.nexss",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.nexss",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.nexss",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.brackets.nexss",
          "begin": "{",
          "end": "}",
          "patterns": [
            {
              "name": "constant.character.escape.nexss",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-dash.nexss",
          "begin": "//",
          "end": "\n"
        }
      ]
    },
    "specialCommand": {
      "patterns": [
        {
          "name": "string.quoted",
          "begin": "\\$#",
          "end": "\n",
          "match": "\\$#"
        }
      ]
    },
    "constants": {
      "patterns": [
        {
          "name": "constant.character",
          "match": "(<|>|=|!|--)"
        },
        {
          "name": "constant.regexp",
          "match": "\\b(?i)(NEXSS_APPS_PATH|JSON)\\b"
        },
        {
          "name": "constant.numeric",
          "match": "[0-9]"
        }
      ]
    }
  },
  "scopeName": "source.nexss"
}
